#include "Unit_Main.h"
#include <string>
#include <vector>
using namespace std;

class Couplet;

class Song {
	public:
	Song();
	~Song();
	set_author(wstring filepath);
	set_name(wstring filepath);
	set_num_couplet(wstring filepath);
	string get_author();
	string get_name();
	int get_num_couplet();
	void read(Couplet song[],wstring filepath ); //дружн≥й метод
	private:
	string author; //k
	string name; //k
	int num_couplet; //k
};

class Couplet {
	public:
	Couplet();
	~Couplet();
	set_text(vector <string> lines);
	set_pos(int num);
	set_size(int num);
	vector <string> get_text();
	void print();//друк
	void print_labeled();//друк з розм≥ткою
	int get_pos();
	int get_size();
	friend void Song::read(Couplet song[],wstring filepath ); //запис п≥сн≥
	void find_char(char sym);  //пошук символу
	void find_word(int word_len, char *word); //пошук слова
	void find_string(string line); //пошук стр≥чки
	void show_first_lines();//вив≥д перших стр≥чок
	void show_last_lines();//вив≥д останн≥х стр≥чок
	void del_line(int posit);//видалитии стр≥чку
	void change_places(int pos1,int pos2);//пом≥н€ти м≥сц€ми
	string return_line(int l_pos);//k
	bool find_rhyme_abab();//k
	bool find_rhyme_vhv(char h);//k
	bool find_rhyme_hdd(char h);//k
	bool find_rhyme_zez(char e);//k
	friend std::ostream& operator << (std::ostream &out, const Couplet &C);//k
	friend std::istream& operator >> (std::istream &in, Couplet &C);//k
	private:
	vector <string> text; //k
	int pos; //k
	int size;
};


